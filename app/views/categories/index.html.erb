<p id="notice"><%= notice %></p>

<h1>Categorias</h1>

<% @categories.each do |category| %>
<p>
  <%= category.name %>
  <% if current_user.id == 1 %>
    <%= link_to 'Editar', edit_category_path(category), class: "btn btn-sm btn-warning" %> | 
    <%= link_to 'Excluir', category, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-sm btn-danger" %>
  <% end %>
<% end %>
</p>

<br>

<%= link_to 'Nova Categoria', new_category_path %>
