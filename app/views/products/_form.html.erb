<%= form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :validade %>
    <%= f.date_select :expires_on, :order => [:day, :month, :year] %>
  </div>

  <div class="field">
    <%= f.label :imagem %>
    <%= f.text_field :image %>
  </div>

  <div class="field">
    <%= f.label :descrição %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :quantidade %>
    <%= f.number_field :quantity %>
  </div>

  <div class="field">
    <%= f.label :categoria %>
    <%= f.collection_select :category_id, @categories, :id, :name %>
  </div>

  <div class="actions">
    <%= f.submit "Salvar", :class => "btn btn-primary" %>
  </div>
<% end %>
